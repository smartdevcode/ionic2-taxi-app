{
  "name": "ionic2-taxi-app",
  "version": "0.0.1",
  "description": "Ionic 2 Taxi App - A simple starting point for building 'on-demand/rideshare taxi' ionic application ( something like Uber, Lyft or Sidecar .. )",
  "keywords": [
    "ionic",
    "ionic2",
    "angular2",
    "webpack",
    "typescript"
  ],
  "author": {
    "name": "Damien Dell'Amico",
    "email": "damien.dellamico@gmail.com",
    "url": "https://github.com/ddellamico"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ddellamico/ionic2-taxi-app.git"
  },
  "scripts": {
    "stats": "bnr stats",
    "dev": "bnr dev",
    "build": "bnr build",
    "test": "bnr test",
    "ios:dev": "bnr ios:dev",
    "ios:release": "bnr ios:release",
    "android:dev": "bnr android:dev",
    "android:release": "bnr android:release",
    "commit": "git-cz",
    "release": "standard-version --no-verify",
    "push": "git push --follow-tags origin master",
    "lint": "tslint \"app/**/*.ts\"",
    "docs": "typedoc --options typedoc.json --exclude '**/*.spec.ts' ./app/",
    "outdated": "npm outdated --depth 0",
    "postinstall": "ionic state restore && typings install"
  },
  "betterScripts": {
    "dev": {
      "command": "webpack-dev-server",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "webpack",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "karma start",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "ios:dev": {
      "command": "ionic run ios --livereload",
      "env": {
        "NODE_ENV": "development",
        "PLATFORM": "ios"
      }
    },
    "ios:release": {
      "command": "webpack && ionic build ios",
      "env": {
        "NODE_ENV": "production",
        "PLATFORM": "ios"
      }
    },
    "android:dev": {
      "command": "ionic run android --livereload",
      "env": {
        "NODE_ENV": "development",
        "PLATFORM": "android"
      }
    },
    "android:release": {
      "command": "tslint \"app/**/*.ts\" && webpack && ionic build android",
      "env": {
        "NODE_ENV": "production",
        "PLATFORM": "android"
      }
    },
    "stats": {
      "command": "webpack --profile --json > stats.json",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/http": "2.0.0-rc.4",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/router": "2.0.0-rc.2",
    "es6-shim": "0.35.0",
    "ionic-angular": "2.0.0-beta.11",
    "ionic-native": "^1.3.10",
    "ionicons": "3.0.0",
    "reflect-metadata": "0.1.3",
    "rxjs": "5.0.0-beta.6",
    "uuid": "^2.0.2",
    "zone.js": "0.6.12"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^2.2.3",
    "better-npm-run": "0.0.11",
    "clean-webpack-plugin": "^0.1.9",
    "codelyzer": "0.0.28",
    "commitizen": "2.8.6",
    "css-loader": "^0.25.0",
    "cz-conventional-changelog": "^1.1.5",
    "del": "2.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "ghooks": "^1.3.2",
    "gulp": "3.9.1",
    "gulp-shell": "^0.5.2",
    "gulp-watch": "4.3.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "ionic-gulp-webpack": "2.0.0",
    "jasmine-core": "^2.4.1",
    "json-loader": "^0.5.4",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.0.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.26",
    "karma-webpack": "^1.7.0",
    "node-sass": "^3.8.0",
    "phantomjs-prebuilt": "^2.1.7",
    "purifycss-webpack-plugin": "^2.0.3",
    "run-sequence": "1.1.5",
    "sass-loader": "^4.0.1",
    "source-map-loader": "^0.1.5",
    "standard-version": "^2.2.1",
    "stats-webpack-plugin": "^0.4.0",
    "style-loader": "^0.13.1",
    "tslint": "^3.10.1",
    "typedoc": "^0.4.4",
    "typescript": "^2.0.0-beta",
    "url-loader": "^0.5.7",
    "validate-commit-msg": "^2.6.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.14.0",
    "webpack-validator": "^2.2.2",
    "ts-helpers": "1.1.1",
    "typings": "1.3.3"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "cordovaPlugins": [
    "cordova-plugin-whitelist@1.2.2",
    "cordova-plugin-geolocation@2.2.0",
    "cordova-plugin-splashscreen@3.2.2",
    "cordova-plugin-crosswalk-webview@1.7.0",
    "cordova-plugin-inappbrowser@1.4.0",
    "cordova-plugin-vibration@2.1.1",
    "cordova-plugin-network-information@1.2.1"
  ],
  "cordovaPlatforms": [
    "ios@4.2.1",
    "android@5.2.2"
  ]
}
